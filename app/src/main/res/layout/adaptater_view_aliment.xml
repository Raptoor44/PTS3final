<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="417dp"
        android:layout_height="127dp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="36dp"
                android:layout_height="match_parent">

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:text="Produit :"
                            android:textColor="#FF0000" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:text="Quantite"
                            android:textColor="#2196F3"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="83dp"
                            android:layout_height="wrap_content"
                            android:text="Date de pÃ©remption"
                            android:textColor="#C30000"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Categorie"
                            android:textColor="#4CAF50"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/id_adaptater_view_aliment_titre_produit"
                            android:layout_width="95dp"
                            android:layout_height="91dp"
                            android:textColor="#FDFDFD" />

                        <TextView
                            android:id="@+id/id_adapter_view_aliment_quantite"
                            android:layout_width="28dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/id_adapter_view_aliment_date_peremption"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/id_adapter_view_aliment_categorie"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#FFFFFF" />

                    </LinearLayout>

                </LinearLayout>
            </FrameLayout>

        </LinearLayout>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>